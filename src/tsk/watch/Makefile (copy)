
.SUFFIXES : .x .o .c .s

CC = arm-linux-gcc

CFLAGS = -O2 -I$(INC) -I$(INCSYS) -I$(INCUSR) -static

OBJDIR = ../../../obj
BINDIR = ../../../bin

ROOT = /usr/local/arm_linux_4.2
LIB = $(ROOT)/lib/gcc/arm-linux/4.2.1
LIB1 =$(ROOT)/arm-linux/lib
LIBUSR = ../../../lib
INCSYS:=$(ROOT)/arm-linux/sys-include
INC :=$(ROOT)/arm-linux/include
INCUSR = ../../inc

WEC_LDFLAGS=-L$(LIB) -L$(LIB1) -L$(LIBUSR)
STRIP=arm-linux-strip

TARGET = watch

SRCS := watch.c

LIBS= -lc -lgcc -lipc -lx_dbg -lrt

all: 
	$(CC) $(CFLAGS) $(WEC_LDFLAGS) $(SRCS) -o $(BINDIR)/$(TARGET) $(LIBS)
	$(STRIP) $(BINDIR)/$(TARGET) 

clean:
	rm -f *.o 
	rm -f *.x 
	rm -f *.flat
	rm -f *.map
	rm -f temp
	rm -f *.img
	rm -f $(TARGET)	
	rm -f *.gdb

	rm -f $(OBJS)
	rm -f $(BINDIR)/$(TARGET)
